  <thead>
      <tr class="row-margin">
        <th>Room Type</th>
      <th>Room Amenities</th>
      </tr>
  </thead>
  <tbody>
    <!-- Room types -->
    <% @detail["RoomTypes"]["RoomType"].each do |detail| %>  
          <tr>
              <td>
