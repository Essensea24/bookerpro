<div id="search-padding" class="row">
		<div class="col-md-7 relative-column">
			<% @hotels.each do |hotel| %>
				<!-- <div class="search-org"> -->
					<div class="col-md-6 search-results">
						<div class="hotel-container">
							<div id="image-overflow"><img src="http://media.expedia.com<%= hotel["thumbNailUrl"][0...-5] + "b.jpg" %>" /></div><br>
							<span id="booker-logo"><%= hotel["name"] %></span><br>
							<span id="booker-logo"><%= hotel["hotelRating"] %> star hotel</span>
							<%= link_to "Book Now",show_hotel_path(:hotelId => hotel["hotelId"]) %><hr>
						</div>

					</div>
					<div class="col-md-6 search-results">
						<div class="hotel-container">
							<div id="image-overflow"><img src="http://media.expedia.com<%= hotel["thumbNailUrl"][0...-5] + "b.jpg" %>" /></div><br>
							<span id="booker-logo" class="hotel-info"><%= hotel["name"] %></span><br>
							<span id="booker-logo" class="hotel-info"><%= hotel["hotelRating"] %> star hotel</span>
							<%= link_to "Book Now",show_hotel_path(:hotelId => hotel["hotelId"]) %><hr>
						</div>
					</div>
				<!-- </div> -->
			<% end %>	
		</div>
		<div class="map-wrapper">
			<div id="google-map" class="col-md-5"></div>
		</div>
</div>


