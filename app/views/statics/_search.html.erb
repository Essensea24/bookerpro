<section class="searchpartial text-center">
  <%= form_tag new_search_path, method: :get do %>
    <%= text_field_tag :destinationString, nil, placeholder: 'Destination', :class => 'search-container' %>
    <span class="search-container">
    <%= text_field_tag(:arrivalDate)%>
    </span>
    <span>
    <%= text_field_tag(:departureDate) %>	
    </span>
    <span class="searchform">
    <%= submit_tag "Search", :class => 'search-container btn-warning' %>
  	</span>	
  	<% end %>
</section>

