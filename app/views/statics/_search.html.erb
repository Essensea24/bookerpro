<section class="searchpartial text-center">
  <%= form_tag new_search_path, method: :get do %>
  	<%= render 'filter' %>
    <%= text_field_tag :destinationString, nil, placeholder: 'Destination', :id => 'pac-input', :class => 'search-container' %>
    <span class="search-container">

    <%= text_field_tag :arrivalDate, nil, placeholder: 'MM/DD/YYYY', :data => {:provide => "datepicker"}, :class => 'search-container datepicker'  %>
    <%= text_field_tag :departureDate, nil, placeholder: 'MM/DD/YYYY', :data => {:provide => "datepicker"}, :class => 'search-container datepicker'  %>


    <span class="searchform">
    <%= submit_tag "Search", :class => 'search-container btn-warning' %>
  	</span>	
  	<% end %>
</section>

  