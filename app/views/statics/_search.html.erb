<body onload="initialize()">
<section class="searchpartial text-center">
  <%= form_tag new_search_path, method: :get do %>
  	<div id="locationField">
        <%= text_field_tag :destinationString, nil, placeholder: 'Where do you want to go?', :id => 'autocomplete', :onFocus => 'geolocate()', :class => 'search-container destination' %>
    </div>

	    <%= text_field_tag :arrivalDate, nil, placeholder: 'Check In', :data => {:provide => "datepicker"}, :class => 'search-container datepicker'  %>
	    <%= text_field_tag :departureDate, nil, placeholder: 'Check Out', :data => {:provide => "datepicker"}, :class => 'search-container datepicker'  %>
	    <%= submit_tag "Search", :class => 'submit-button search-container' %>

  	<% end %>
</section>
</body>

<script>
function initialize() {
  autocomplete = new google.maps.places.Autocomplete(
      /** @type {HTMLInputElement} */(document.getElementById('autocomplete')));
}
</script>

  